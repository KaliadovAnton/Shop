<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
        version="2.5">
    <welcome-file-list>
        <welcome-file>shop.html</welcome-file>
        <welcome-file>default.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>main-serv</servlet-name>
        <servlet-class>anton.MainServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>temp-serv</servlet-name>
        <servlet-class>anton.JspServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>temp-serv</servlet-name>
        <url-pattern>/temp-serv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/static/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>main-serv</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>jsp-servlet</servlet-name>
        <servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>jsp-servlet</servlet-name>
        <url-pattern>*.jsp</url-pattern>
    </servlet-mapping>
</web-app>
